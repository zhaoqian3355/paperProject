@{
    ViewData["Title"] = "火车站点";
}

<table class="data display datatable" id="example">
    <thead>
        <tr>
            <th>所在省</th>
            <th>城市名</th>
            <th>站点名称</th>
            <th>北纬</th>
            <th>东经</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<script>
    $.ajax({
        url: "/Train/StationData",
        type: "GET",
        data: {page:50},
        success: function (param) {
            $("#example tbody").empty();
            for (var i = 0; i < param.length; i++) { 
                var str = "";
                var item = param[i];
                if (i % 2 == 0) {
                    str += '<tr class="odd">';
                    str += '            <td class="center">' + item.provinceName + '</td>';
                    str += '            <td class="center">' + item.cityName+'</td>';
                    str += '            <td class="center">' + item.stationName+'</td>';
                    str += '            <td class="center">' + item.latitude + '</td>';
                    str += '            <td class="center">' + item.longitude + '</td>';
                    str += '</tr>';
                } else { 
                    str += '<tr class="even">';
                    str += '            <td class="center">' + item.provinceName + '</td>';
                    str += '            <td class="center">' + item.cityName+'</td>';
                    str += '            <td class="center">' + item.stationName+'</td>';
                    str += '            <td class="center">' + item.latitude + '</td>';
                    str += '            <td class="center">' + item.longitude + '</td>';
                    str += '</tr>';
                }
                $("#example tbody").append(str);
            }
        },
        error: function (XMLHttpRequest, textStatus, errorThrown) {
        }
    });
</script>